<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
        <struts>



        <package name="login" extends="base" namespace="/staff">



                <action name="staffAction_login" class="staffAction" method="login">
                        <result name="success">/pages/frame.jsp</result>
                        <result name="input">/pages/login.jsp</result>
                </action>


                <action name="findStaff" class="staffAction" method="findStaff">
                        <result name="success">/pages/staff/listStaff.jsp</result>
                </action>

                <action name="addStaff" class="staffAction" method="addStaff">
                        <result name="success" type="redirectAction">findStaff</result>
                </action>

                <action name="findDept" class="staffAction" method="findAllDept">
                        <result name="success">/pages/staff/addStaff.jsp</result>
                </action>

                <action name="findPost" class="staffAction" method="findAllPost">
                        <result name="success" type="json">
                                <param name="root">queryStaffPost</param>
                                <param name="includeProperties">\[\d\]\.postId,\[\d\]\.postName</param>
                        </result>
                </action>


                <action name="editStaff" class="staffAction" method="editStaff">
                        <result name="success">/pages/staff/editStaff.jsp</result>
                </action>


                <action name="editStaff2" class="staffAction" method="addStaff">
                        <result name="success" type="redirectAction">findStaff</result>
                </action>



                <action name="staffsJson"
                        class="staffAction"
                        method="getResult">
                        <result name="success" type="json">
                                <param name="root">staffServiceAll</param>
                                <param name="excludeProperties">\[\d\]\.post\.staffs,
                                        \[\d\]\.post\.dept\.posts
                                </param>
                        </result>
                </action>



                <!--更换密码-->

                <action name="staffAction_editPassword" class="staffAction" method="updatePwd">
                        <result name="success" type="redirect">/pages/login.jsp</result>
                </action>


                <!--为了重新登录!-->
                <action name="reLogin" class="staffAction" method="reLogin">
                        <result name="success">/pages/login.jsp</result>
                </action>


        </package>
</struts>